#include<stdio.h>

void insertion_sort(int array[]);
void printArray(int array[]);

int main()
{
	int array[] = {5, 2, 4, 6, 1, 3};
	printArray(array);
	insertion_sort(array);
}

void printArray(int array[])
{
	for (int i = 0; i < 100; i++)
	{
		printf(" %d ", array[i]);
	}
	printf("\n");
}

void insertion_sort(int array[])
{
	for( int j = 2; j < sizeof(array); j++)
	{
		int key = array[j];
		int i = j - 1;
		while (i > 0 && array[i] > key)
		{
			array[i + 1] = array[i];
			i--;
		}
		array[i + 1] = key;
		printArray(array);
	}
	printArray(array);
}
